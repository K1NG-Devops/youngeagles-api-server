// 404 handler for unmatched routes
app.use('*', (req, res) => {
  res.status(404).json({
    message: 'Endpoint not found in minimal configuration',
    path: req.originalUrl,
    method: req.method,
    timestamp: new Date().toISOString(),
    availableEndpoints: [
      'GET /',
      'GET /health', 
      'GET /api/test',
      'GET /api/minimal-test',
      'GET /api/test-db'
    ]
  });
});

